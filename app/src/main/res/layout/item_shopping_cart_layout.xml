<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:padding="@dimen/dimen_10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_10dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_round1"


            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天猫自营店"
            android:layout_marginLeft="@dimen/dimen_10dp"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_10dp"
        >

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_round1"
          android:layout_gravity="center_vertical"

          />


        <ImageView
            android:id="@+id/im_goods_image"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_100dp"
            android:src="@drawable/kuangwei"
            android:background="@color/color_EEEEEE"
            android:layout_marginLeft="@dimen/dimen_10dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_10dp"
            >
            <TextView
                android:id="@+id/tv_goods_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="converse匡威官方One star 低帮板鞋 163245C"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                >

                <TextView
                    android:id="@+id/tv_goods_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="黄色;"
                    />

                <TextView
                    android:id="@+id/tv_goods_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="L"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_T_mall_theme"
                android:text="存库紧张"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dimen_10dp"
                android:paddingBottom="@dimen/dimen_10dp"
                >
                <TextView
                    android:id="@+id/tv_goods_prices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥999"
                    android:textColor="@color/color_T_mall_theme"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>