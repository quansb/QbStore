<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_shopping_cart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dimen_10dp"


        >

        <TextView
            android:id="@+id/tv_shopping_cart_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_titile_shopping_cart"
            android:text="@string/shopping_cart"
            android:textSize="@dimen/dimen_18sp"
            android:textColor="@color/color_000000"
            android:layout_centerInParent="true"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/management"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/color_cdcdcd"
        android:layout_below="@+id/tv_shopping_cart_name"
        />
    </LinearLayout>





</RelativeLayout>