<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_rush_to_buy_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f7f7f7"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:paddingTop="@dimen/dimen_10dp"
        >
        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_top_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="限时抢购"
            android:textSize="@dimen/dimen_15sp"
            android:textColor="@color/color_000000"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <cn.iwgang.countdownview.CountdownView
            android:paddingTop="@dimen/dimen_3dp"
            android:layout_weight="1"
            android:id="@+id/cv_count_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            apps:timeTextSize="@dimen/dimen_9dp"
            apps:isShowHour="true"
            apps:isShowMinute="true"
            apps:isShowSecond="true"
            apps:suffixHour=":"
            apps:suffixMinute=":"
            apps:timeTextColor="@color/color_white"
            apps:timeBgRadius="3dp"
            apps:isHideTimeBackground="false"
            apps:timeBgColor="@color/color_000000"
            apps:suffixGravity="center"
            apps:isTimeTextBold="true"
            apps:timeBgSize="@dimen/dimen_15sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_10dp"

            >
            <ImageView
                android:id="@+id/im_left_image"
                android:layout_width="@dimen/dimen_70dp"
                android:layout_height="@dimen/dimen_70dp"
                android:drawablePadding="@dimen/dimen_8dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:src="@drawable/shore"
                android:textSize="@dimen/dimen_10sp"
                />
            <TextView
                android:id="@+id/tv_bottom_left_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="仅剩80件"
                android:layout_gravity="center"
                android:gravity="center"
                style="@style/rush_Text"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_10dp"
            >
            <ImageView
                android:id="@+id/im_right_image"
                android:layout_width="@dimen/dimen_70dp"
                android:layout_height="@dimen/dimen_70dp"
                android:drawablePadding="@dimen/dimen_8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/shore"
                />
            <TextView
                android:id="@+id/tv_bottom_right_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="仅剩80件"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/dimen_10sp"
                style="@style/rush_Text"
                />
        </LinearLayout>

    </LinearLayout>

    </LinearLayout>





</LinearLayout>