<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>

    </style>




    <style name="MyEditText" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorControlNormal">@color/color_8a8a8a</item>
        <item name="colorControlActivated">@color/color_f36908</item>
    </style>

    <style name="homeText" >
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/color_white</item>
       <item name="android:textSize">@dimen/dimen_8dp</item>
    </style>

    <style name="rush_Text" >
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/color_ff3936</item>
        <item name="android:textSize">@dimen/dimen_10sp</item>
        <item name="android:background">@drawable/bg_common_text_style</item>
        <item name="android:paddingLeft">@dimen/dimen_3dp</item>
       <item name="android:paddingRight">@dimen/dimen_3dp</item>
    </style>

    <style name="buy_text" >
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize">@dimen/dimen_13sp</item>
    </style>

    <style name="add_minus_text">
        <item name="android:paddingLeft">@dimen/dimen_10dp</item>
        <item name="android:paddingRight">@dimen/dimen_10dp</item>
        <item name="android:paddingTop">@dimen/dimen_5dp</item>
        <item name="android:paddingBottom">@dimen/dimen_5dp</item>
    </style>

    <style name="pwd_text" >
        <!-- Customize your theme here. -->
        <item name="android:textColor">#444444</item>
        <item name="android:textSize">@dimen/dimen_32sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>





    <style name="BuyGoodsDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/BuyGoodsDialogAnimation</item>
    </style>

    <style name="BuyGoodsDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/buy_goods_dialog_slide_show</item>
        <item name="android:windowExitAnimation">@anim/buy_goods_dialog_slide_hide</item>
    </style>


    <style name="BottomDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/BottomDialogAnimation</item>
    </style>

    <style name="BottomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_dialog_slide_show</item>
        <item name="android:windowExitAnimation">@anim/bottom_dialog_slide_hide</item>
    </style>






    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_overlay" format="boolean" />
    </declare-styleable>
    <color name="color_333333">#333333</color>
</resources>
