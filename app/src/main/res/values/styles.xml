<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>

    </style>




    <style name="MyEditText" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorControlNormal">@color/color_8a8a8a</item>
        <item name="colorControlActivated">@color/color_f36908</item>
    </style>

    <style name="homeText" >
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/color_white</item>
       <item name="android:textSize">@dimen/dimen_8dp</item>
    </style>

    <style name="rush_Text" >
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/color_ff3936</item>
        <item name="android:textSize">@dimen/dimen_10sp</item>
        <item name="android:background">@drawable/bg_common_text_style</item>
        <item name="android:paddingLeft">@dimen/dimen_3dp</item>
       <item name="android:paddingRight">@dimen/dimen_3dp</item>

    </style>






    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_overlay" format="boolean" />
    </declare-styleable>
</resources>
